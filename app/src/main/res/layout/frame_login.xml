<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/espacio_normal"
    tools:context=".ui.login.LoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ilogo"
            android:layout_width="@dimen/icono_mediano"
            android:layout_height="@dimen/icono_mediano"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_maquina" />

        <TextView
            android:id="@+id/ttitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ilogo"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorTextoTitulo"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilusuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Usuario"
            app:startIconDrawable="@drawable/ic_nombre"
            app:startIconContentDescription="Usuario"
            app:endIconMode="clear_text"
            android:layout_below="@+id/ttitulo"
            android:layout_marginTop="@dimen/espacio_normal"
            android:padding="@dimen/espacio_minimo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tieusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:digits="0123456789"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:maxLength="20"
                android:textColor="@color/colorPrimary"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilcontra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Contraseña"
            app:startIconDrawable="@drawable/ic_nombre"
            app:startIconContentDescription="Usuario"
            app:endIconMode="clear_text"
            android:layout_below="@+id/tilusuario"
            android:padding="@dimen/espacio_minimo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiecontra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:maxLength="20"
                android:textColor="@color/colorPrimary"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/blogin"
            android:layout_width="@dimen/boton_normal"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="Iniciar sesión"
            android:textColor="@color/colorBlanco"
            app:backgroundTint="@color/colorPrimary"
            app:rippleColor="@color/colorAccent"
            android:layout_below="@+id/tilcontra"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/espacio_normal"
            android:padding="@dimen/espacio_minimo"/>

        <TextView
            android:id="@+id/tolvido_clave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/espacio_normal"
            android:padding="@dimen/espacio_minimo"
            android:text="¿Olvido su contraseña?"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/espacio_grande"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ttnuevo_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Eres nuevo usuario?" />

            <TextView
                android:id="@+id/tnuevo_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/espacio_minimo"
                android:text="Registrate"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>