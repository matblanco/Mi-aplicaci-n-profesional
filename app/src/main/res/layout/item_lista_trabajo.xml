<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/espacio_minimo">

            <ImageView
                android:id="@+id/iperfil"
                android:layout_width="@dimen/icono_pequeño"
                android:layout_height="@dimen/icono_pequeño"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:elevation="@dimen/espacio_minimo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_tiempo" />

            <LinearLayout
                android:id="@+id/lfecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/espacio_minimo"
                android:layout_toRightOf="@+id/iperfil"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiempo: "
                        android:textColor="@color/colorTextoInfo" />

                    <TextView
                        android:id="@+id/ttiempo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorNegro" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inicio: "
                        android:textColor="@color/colorTextoInfo" />

                    <TextView
                        android:id="@+id/tfechai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorNegro" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Final: "
                        android:textColor="@color/colorTextoInfo" />

                    <TextView
                        android:id="@+id/tfechaf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorNegro" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


</androidx.cardview.widget.CardView>