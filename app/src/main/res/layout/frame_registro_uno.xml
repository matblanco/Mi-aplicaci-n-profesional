<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/espacio_normal"
    tools:context=".ui.regsitro.RegistroUnoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bsiguiente"
            android:isScrollContainer="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rtitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iregistro"
                        android:layout_width="@dimen/icono_pequeño"
                        android:layout_height="@dimen/icono_pequeño"
                        android:src="@drawable/ic_maquina" />

                    <TextView
                        android:id="@+id/ttitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/espacio_minimo"
                        android:text="Nuevo Usuario"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorTextoTitulo" />

                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/espacio_normal"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/enombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre"
                            android:inputType="textPersonName"
                            android:padding="@dimen/espacio_minimo"
                            android:selectAllOnFocus="true"
                            android:maxLength="50"
                            android:textColor="@color/colorPrimary"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


                        <EditText
                            android:id="@+id/edireccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dirección"
                            android:inputType="textPostalAddress"
                            android:padding="@dimen/espacio_minimo"
                            android:layout_marginTop="@dimen/espacio_minimo"
                            android:selectAllOnFocus="true"
                            android:maxLength="50"
                            android:textColor="@color/colorPrimary"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        <EditText
                            android:id="@+id/epnombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Primer nombre"
                            android:inputType="textPersonName"
                            android:padding="@dimen/espacio_minimo"
                            android:selectAllOnFocus="true"
                            android:maxLength="20"
                            android:textColor="@color/colorPrimary"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


                        <EditText
                            android:id="@+id/esnombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Segundo nombre"
                            android:inputType="textPersonName"
                            android:padding="@dimen/espacio_minimo"
                            android:layout_marginTop="@dimen/espacio_minimo"
                            android:selectAllOnFocus="true"
                            android:maxLength="20"
                            android:textColor="@color/colorPrimary"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        <EditText
                            android:id="@+id/epapellido"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Primer apellido"
                            android:inputType="textPersonName"
                            android:padding="@dimen/espacio_minimo"
                            android:layout_marginTop="@dimen/espacio_minimo"
                            android:selectAllOnFocus="true"
                            android:maxLength="20"
                            android:textColor="@color/colorPrimary"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        <EditText
                            android:id="@+id/esapellido"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Segundo apellido"
                            android:inputType="textPersonName"
                            android:padding="@dimen/espacio_minimo"
                            android:layout_marginTop="@dimen/espacio_minimo"
                            android:selectAllOnFocus="true"
                            android:maxLength="20"
                            android:textColor="@color/colorPrimary"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


                        <Spinner
                            android:id="@+id/spais"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/espacio_minimo"
                            android:popupBackground="@color/colorBlanco"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@drawable/fondo_spiner"/>

                        <Spinner
                            android:id="@+id/sdepartamento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/espacio_minimo"
                            android:popupBackground="@color/colorBlanco"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@drawable/fondo_spiner"/>

                        <Spinner
                            android:id="@+id/sciudad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/espacio_minimo"
                            android:popupBackground="@color/colorBlanco"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@drawable/fondo_spiner"/>


                    </LinearLayout>

            </LinearLayout>

        </ScrollView>


        <Button
            android:id="@+id/bsiguiente"
            android:layout_width="@dimen/boton_normal"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/espacio_minimo"
            android:text="Siguiente"
            android:background="@drawable/fondo_boton"
            android:textColor="@color/colorBlanco"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:foreground="?android:attr/selectableItemBackground"/>



    </RelativeLayout>


</FrameLayout>